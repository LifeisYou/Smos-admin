<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_app">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white">
        <Button
            android:id="@+id/btn_chart_day"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/bg_white"
            android:drawableLeft="@drawable/ic_chart_day"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_menu_go"
            android:gravity="left|center_vertical"
            android:text="日报表"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white">
        <Button
            android:id="@+id/btn_chart_month"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/bg_white"
            android:drawableLeft="@drawable/ic_chart_month"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_menu_go"
            android:gravity="left|center_vertical"
            android:text="月报表"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white">
        <Button
            android:id="@+id/btn_chart_year"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/bg_white"
            android:drawableLeft="@drawable/ic_chart_year"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_menu_go"
            android:gravity="left|center_vertical"
            android:text="年报表"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/bg_white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_equip_search_left"/>
    <TextView
        android:id="@+id/tv_equip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/newPrimaryText"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_equip_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_equip_name"
        android:layout_marginRight="56dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/newSecondAryText"
        android:textSize="14sp" />

</RelativeLayout>
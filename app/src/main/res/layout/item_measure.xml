<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_measure_type"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_app"
        android:gravity="center"
        android:textColor="@color/newSecondAryText"
        android:text="遥测"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/tv_measure_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/newPrimaryText"
            android:textSize="18sp"
            android:text="IA"/>
        <TextView
            android:id="@+id/tv_measure_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/newColorPrimary"
            android:textSize="16sp"
            android:text="0"/>
        <TextView
            android:id="@+id/tv_measure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/newSecondAryText"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>